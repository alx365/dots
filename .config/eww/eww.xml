<eww>
  <definitions>
    <def
        name="list">
     <literal content="{{list}}"/> 
    </def>
  </definitions>

  <variables>
    <script-var name="list" interval="10000s">
      /home/legendofmiracles/eww/egs.sh
    </script-var>
  </variables>

  <windows>
    <window name="egs">
      <size x="250" y="80" />
      <pos x="0" y="0" />
      <widget>
        <box orientation="v">
          Games
          <list/>
          <button onclick="eww close {{window_name}}">Quit</button>
        </box>
      </widget>
    </window>
    <window name="color">
     <size x="250" y="80" />
     <pos x="0" y="0" />
     <widget>
       <box>
        AAA
       <colorButton/>
       </box>
     </widget>
    </window>
  </windows>
</eww>

