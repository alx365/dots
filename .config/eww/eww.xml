<eww>
  <definitions>
    <def
        name="list">
     <literal content="{{list}}"/> 
    </def>
    <def name="combo-box">
      <literal content="{{games}}"/>
    </def>
  </definitions>
  <variables>
    <script-var name="list" interval="10000s">
      /home/legendofmiracles/eww/egs.sh
    </script-var>
    <script-var name="games" interval="100000000000000s">
      /home/legendofmiracles/eww/games.sh item
    </script-var>
    <script-var name="glava" interval="1s">
      /home/legendofmiracles/eww/glava.sh 
    </script-var>
  </variables>
  
  <includes>
    <file path="/home/legendofmiracles/something.xml"/>
    <file path="./saaomething.xml"/>
  </includes>

  <windows>
    <window name="egs">
      <size x="250" y="80" />
      <pos x="0" y="0" />
      <widget>
        <box orientation="v">
          Games
          <list/>
          <combo-box/>
          <button onclick="eww close {{window_name}}">Quit</button>
          </box>
      </widget>
    </window>

  <window name="test">
      <size x="250" y="100"/>
      <pos x="0" y="0"/>
        <widget>
          <combo-box-text items="[hello\,bye,asdf,poiuytrew, lolsu]" onchange="notify-send {}">
            asdf
          </combo-box-text>
        </widget>
     </window> 

  <window name="glava">
    <size x="250" y="80"/>
    <pos x="1920" y="1080"/>
    <widget>
      <label>
        {{glava}}
      </label>
    </widget>
  </window>
  </windows>
</eww>
