<eww>
  <definitions>
    <def
        name="list">
     <literal content="{{list}}"/> 
    </def>
  </definitions>

  <variables>
    <script-var name="list" interval="10000s">
      /home/legendofmiracles/eww/egs.sh
    </script-var>
    <var name="selection">lolsu</var>
  </variables>

  <windows>
    <window name="egs">
      <size x="250" y="80" />
      <pos x="0" y="0" />
      <widget>
        <box orientation="v">
          Games
          <list/>
          <button onclick="eww close {{window_name}}">Quit</button>
        </box>
      </widget>
    </window>
    <window name="color">
     <size x="250" y="100" />
     <pos x="0" y="0" />
     <widget>
       <box>
        <expander label="system info" expanded="true">
          <box orientation="v">
          CPU 10%
          RAM 50%
          <expander label="extra info">
            SSD 80%
            CPU CORES: 12
          </expander>
          </box>
        </expander>
       </box>
     </widget>
    </window>
    <window name="test">
      <size x="250" y="100"/>
      <pos x="0" y="0"/>
        <widget>
          <combo-box items="[hello\,bye]" onchange="eww update selection {}">
            {{selection}}
            </combo-box>
        </widget>
      </window>
  </windows>
</eww>

